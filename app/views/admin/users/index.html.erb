 <!-- Basic Table -->
 <div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="header">
        All Users
        <%= link_to 'New User', new_admin_user_path, :class=> "btn btn-small btn-primary pull-right" %>
      </div>
      <div class="body table-responsive">

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Role</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <% if user.role == 0 %>
                <td>User</td>
              <% end %>
              <% if user.role == 1 %>
                <td>Manager</td>
              <% end %>
              <% if user.role == 2 %>
                <td>Staff<td>
              <% end %>
              <% if user.role == 3 %>
                <td>Admin</td>
              <% end %>
              <td><%= link_to 'Edit', edit_admin_user_url(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @users, class: "digg_pagination search-pagination", :previous_label => 'Previous', :next_label => 'Next' %>
      </div>
    </div>
  </div>
</div>

</div>
            <!-- #END# Basic Table -->