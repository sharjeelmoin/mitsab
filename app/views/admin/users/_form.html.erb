<%= form_for([:admin, @user]) do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <% user.errors.full_messages.each do |message| %>
        <p class="mb-0"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="row">
    <%= f.label :first_name, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.label :last_name, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.label :email, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.label :company, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :company, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.label :address_line1, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :address_line1, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.label :country, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <%= f.label :country, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <%= f.label :state, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <%= f.label :city, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>
    </div>
  </div> 

  <div class="row">
    <%= f.label :phone, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>   

  <div class="row">
    <%= f.label :password, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :password, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <%= f.label :password_confirmation, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <%= f.text_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <%= f.label :role, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <div class="form-group">
        <div class="form-line">
          <select name="user[role]" id="" class="form-control show-tick ms">
            <option value="0">User</option>
            <option value="1">Manager</option>
            <option value="2">Staff</option>
            <option value="3">Admin</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.submit t('.sign_up', :default => "Save"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
