<div class="container-fluid">
	<div class="block-header">
		Dashboard
	</div>
	<div class="row clearfix">
		<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
			<div class="info-box bg-pink hover-expand-effect">
				<div class="icon">
					<i class="material-icons">playlist_add_check</i>
				</div>
				<div class="content">
					<div class="text">Total Lots</div>
					<div class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20"><%= total_lots_count %></div>
				</div>
			</div>
		</div>
		
		<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
			<div class="info-box bg-cyan hover-expand-effect">
				<div class="icon">
					<i class="material-icons">help</i>
				</div>
				<div class="content">
					<div class="text">Cars in Auction</div>
					<div class="number count-to" data-from="0" data-to="257" data-speed="1000" data-fresh-interval="20"><%= total_auction_count %></div>
				</div>
			</div>
		</div>


		<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
			<div class="info-box bg-orange hover-expand-effect">
				<div class="icon">
					<i class="material-icons">person_add</i>
				</div>
				<div class="content">
					<div class="text">Total Users</div>
					<div class="number count-to" data-from="0" data-to="1225" data-speed="1000" data-fresh-interval="20"><%= total_users_count %></div>
				</div>
			</div>
		</div>


	</div>

	<div class="row clearfix">
		<div class="col-xs-12 col-sm-12 col-md-8 col-lg-12">
			<div class="card">
				<div class="header">
				<h2>Recent Registered Users</h2>
				</div>
				<div class="body">
					<div class="table-responsive">
						<table class="table table-hover dashboard-task-infos">
							<thead>
								<tr>
									<th>#</th>
									<th>First Name</th>
									<th>Last Name</th>
									<th>Email</th>
									<th>Role</th>
									<th>Bids</th>
								</tr>
							</thead>
							<tbody>
								<% User.where(role: 0).limit(10).each do | user | %>
								<tr>
									<td><%= user.id %></td>
									<td><%= user.first_name %></td>
									<td><%= user.last_name %></td>
									<td><%= user.email %></td>
									<td><span class="label bg-green">User</span></td>
									<td>
										<%= user.bids.count %>
									</td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>




</div>