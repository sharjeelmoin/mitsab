<div class="start_text">
	<h6>Seller Info</h6>

	<% if @lot.yard_name.present? %>
	<p><span>Location:</span><%= @lot.yard_name %></p>
	<% end %>

	<% if @lot.grid_rows.present? %>
	<p><span>Lane/Item/Grid/Row</span><%= @lot.grid_rows %></p>
	<% end %>

	<% if @lot.sale_date.present? %>
	<p><span>Sale Date:</span><%= date_long(@lot.sale_date) %></p>
	<% end %>

	<% if @lot.cop_created_date.present? && @lot.sale_date.future? %>
	<p style="color:red;"><span style="color: #000000;">Time Left:</span><%= distance_of_time_in_words(@lot.sale_date, Time.now) %></p>
	<% end %>

</div>